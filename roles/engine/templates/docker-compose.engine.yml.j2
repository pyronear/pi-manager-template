services:
  pyro_engine:
    container_name: engine
    image: 'pyronear/pyro-engine:{{pyronear_version}}'
    network_mode: host
    environment:
    - API_URL=${API_URL}
    - CAM_USER=${CAM_USER}
    - CAM_PWD=${CAM_PWD}
    command: ["/bin/sh", "-c", "python run.py 2>&1 | tee -a engine.log"]
    volumes:
    - ./data:/usr/src/app/data
    restart: always
    logging:
      driver: json-file
      options:
        max-size: 100m
        max-file: '5'
    healthcheck:
      test: ["CMD-SHELL", "grep 'confidence' engine.log || exit 1"]
      interval: 30s
      retries: 3
      start_period: 10s
      timeout: 5s
